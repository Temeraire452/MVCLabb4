@model MVCLabb4.Models.Customer

<h2>Customer Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            LastName
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            PhoneNumber
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
    </dl>
</div>

<h4>Borrowed Books</h4>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Borrow Date</th>
            <th>Return Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var borrow in Model.Borrows)
        {
            <tr>
                <td>@borrow.Book.Title</td>
                <td>@borrow.Book.Author</td>
                <td>@borrow.BorrowDate.ToString("yyyy-MM-dd")</td>
                <td>@borrow.ReturnDate?.ToString("yyyy-MM-dd") ?? "Not Returned"</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>